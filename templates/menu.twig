{% if menu %}
<div class="navbar">
	<div class="container d-flex justify-content-between">
		<a href="#" class="navbar-brand">Gage</a>
		<ul class="nav justify-content-center">
			{% for item in menu %}
			<li class="nav-item">
				<a class="nav-link {% if current_nav == item.title %} active {% endif %}" target="{{ item.target }}" href="{{ item.link }}">{{ item.title }}</a>
			</li>
			{% endfor %}
		</ul>
	</div>
</div>
{% endif %}
