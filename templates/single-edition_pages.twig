{% extends "base.twig" %}

{% block content %}
<style>

</style>
<div class="row">
	<div id="gage-page-img-col" class="col-lg-6 col-md-6 col-sm-12">
		<img id="gage-page-img" class="img-fluid" src="{{ Image(page.page_image).src }}" />
	</div>
	<div id="gage-page-text-col" class="col-lg-6 col-md-6 col-sm-12">
		<h2 id="gage-page-title">{{post.page_number}}</h2>
		<div id="gage-page-text-container">
			{{page.content}}
		</div>

	</div>
</div>

<nav aria-label="Page navigation example">
    <ul class="pagination pagination-lg justify-content-center">

        <li class="page-item">
            <a class="page-link" href="/page-{{page_number - 1}}" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
                <span class="sr-only">Previous {{prev_page.link}}</span>
            </a>
        </li>

		{% for item in chapter.get_field('chapter_pages') %}
			<li class="page-item {% if page.page_number == item.page.page_number %}active{% endif %}"><a class="page-link" href="{{item.page.link}}">{{item.page.page_number}}</a></li>
		{% endfor %}

        <li class="page-item">
            <a class="page-link" href="/page-{{page_number + 1}}" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
                <span class="sr-only">Next {{page_number + 1}}</span>
            </a>
        </li>
    </ul>
</nav>
{% endblock %}
